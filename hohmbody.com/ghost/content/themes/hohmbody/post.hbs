</aside>

{{!-- Links to Previous/Next posts --}}
<aside class="read-next container post-container">
    {{#next_post}}
    <div>
        <span>Next Post:</span> <a href="{{url}}">{{title}}</a>
    </div>
    {{/next_post}}
    {{#prev_post}}
    <div>
        <span>Prev Post:</span> <a href="{{url}}">{{title}}</a>
    </div>
    {{/prev_post}}
</aside>

{{/post}}

{{> footer }}
